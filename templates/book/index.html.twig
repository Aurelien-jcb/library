{% extends 'base.html.twig' %}

{% block title %}Book index{% endblock %}

{% block body %}
    <h1>Book index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Category</th>
                <th>Language</th>
                <th>Author</th>
                <th>Date</th>
                <th>NumberPage</th>
                <th>Editor</th>
                <th>BookIsbn</th>
                <th>State</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for book in books %}
            <tr>
                <td>{{ book.id }}</td>
                <td>{{ book.title }}</td>
                <td>{{ book.category }}</td>
                <td>{{ book.language }}</td>
                <td>{{ book.author }}</td>
                <td>{{ book.date ? book.date|date('Y-m-d') : '' }}</td>
                <td>{{ book.numberPage }}</td>
                <td>{{ book.editor }}</td>
                <td>{{ book.bookIsbn }}</td>
                <td>{{ book.state }}</td>
                <td>
                    <a href="{{ path('book_show', {'id': book.id}) }}">show</a>
                    <a href="{{ path('book_edit', {'id': book.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('book_new') }}">Create new</a>
{% endblock %}
